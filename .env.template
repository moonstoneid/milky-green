# Protocol and domain
# (Used to build the Signing URI in the SIWE message and the Issuer in the OIDC Identity Token.)
MILKYGREEN_SERVICE_PROTOCOL=http
MILKYGREEN_SERVICE_DOMAIN=idp.example.com

# API key (optional)
# (If no set, the API key is auto-generated at startup.)
MILKYGREEN_API_KEY=

# Ethereum API URL (optional)
# (If no set, the validation of Siwe messages signed by contracts and the retrieval of ENS
# information is disabled.)
MILKYGREEN_ETH_API_URL=

# Database host
DB_HOST=localhost
# Database port
DB_PORT=3306
# Database username
DB_USERNAME=root
# Database password
DB_PASSWORD=root
# Database scheme
DB_SCHEME=milkygreen